# Server
PORT=8080
ENV=production

# Database - Neon PostgreSQL (Render will use this)
# ⚠️ REPLACE WITH YOUR ACTUAL NEON DATABASE URL
NEON_DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Redis - Upstash (Render will use this)
# ⚠️ REPLACE WITH YOUR ACTUAL UPSTASH CREDENTIALS
UPSTASH_REDIS_URL=your-redis-host.upstash.io:6379
UPSTASH_REDIS_TOKEN=your_upstash_token_here

# JWT
# ⚠️ CRITICAL: Generate a strong random secret (min 32 characters)
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_MIN_32_CHARS
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
# ⚠️ REPLACE WITH YOUR EMAIL CREDENTIALS
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=your-email@gmail.com
FRONTEND_URL=https://your-frontend.onrender.com

# Security
BCRYPT_COST=12
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=1m
SESSION_TIMEOUT=30m
ACCOUNT_LOCKOUT_DURATION=30m
MAX_FAILED_ATTEMPTS=5
PASSWORD_COMPLEXITY=true
CSRF_PROTECTION=true
REQUEST_TIMEOUT=30s
